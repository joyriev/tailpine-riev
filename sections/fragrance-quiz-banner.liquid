{% style %}
.fragrance-quiz-banner {
  position: relative;
  background-size: cover;
  background-position: center;
  border-radius: 12px;
  overflow: hidden;
  padding: 4rem 2rem;
  text-align: center;
  box-shadow:0px 4px 24px #4F4F4F29;
}

.fragrance-quiz-banner__content {
  position: relative;
  z-index: 1;
  max-width: 800px;
  margin: 0 auto;
}

.fragrance-quiz-banner__heading {
  font-size: 24px;
  font-weight: 700;
  line-height:32px;
  margin-bottom: 1rem;
}

.fragrance-quiz-banner__description {
  font-size: 18pxrem;
  margin-bottom: 2rem;
}

.fragrance-quiz-banner__button {
  background-color: #3e681e;
  color: white;
  padding: 0.75rem 2rem;
  border-radius: 9999px;
  text-decoration: none;
  font-weight: 600;
  display: inline-block;
  transition: background 0.3s ease;
}

.fragrance-quiz-banner__button:hover {
  background-color: #345c1a;
}
.fragrance-quiz-banner.section-{{section.id}}{
  margin-bottom:{{section.settings.padding_bottom}}px;
  margin-top:{{section.settings.padding_top}}px;
}
@media (min-width:750px){
  .fragrance-quiz-banner.section-{{section.id}}{
  background-image: url({{ section.settings.background_image | image_url: width: 1600 }});
}
}
@media (max-width:749px){
  .fragrance-quiz-banner.section-{{section.id}}{
    background-image: url({{ section.settings.background_image_mobile | image_url: width: 800 }});
    background-size: contain;
    background-repeat: no-repeat;
    background-position: bottom;
    margin-left: 15px;
    margin-right: 15px;
  }
}
{% endstyle %}
  <div class="{% if section.settings.full_with %}page-width {% endif %} fragrance-quiz-banner section-{{section.id}}">
    <div class="fragrance-quiz-banner__content">
      <h2 class="fragrance-quiz-banner__heading">{{ section.settings.heading }}</h2>
      <p class="fragrance-quiz-banner__description">{{ section.settings.description }}</p>
      {% if section.settings.button_link != blank and section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="fragrance-quiz-banner__button">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </div>
{% schema %}
{
  "name": "Fragrance Quiz Banner",
  "tag": "section",
  "class": "fragrance-quiz-banner-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_with",
      "label": "Fix Width"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Background Image Mobile"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Not sure where to start?"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Take our quiz for specialist recommendations."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Find My Fragrance"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "default":0,
      "max": 130,
      "step": 2,
      "unit": "px",
      "label": "Margin top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "default":0,
      "max": 130,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom"
    },
  ],
  "presets": [
    {
      "name": "Fragrance Quiz Banner"
    }
  ]
}
{% endschema %}
