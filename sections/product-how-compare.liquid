<style>
.compare-section-main {
  background: #f8f5f0;
  padding: 50px 20px;
  text-align: center;
  font-family: Arial, sans-serif;
  color: #333;
}

.compare-section-main .compare-heading {
  font-size: 30px;
  font-weight: 700;
  margin-bottom: 30px;
}


.compare-section-main table {
  width: 100%;
  max-width: 900px;
  margin: 0 auto 50px;
  border-collapse: collapse;
}

.compare-section-main th{
  padding: 15px;
  font-size: 16px;
  text-align: left;
  border-bottom: 2px solid #4d8127;
  width:33.33%;
}

.compare-section-main td {
  padding: 15px;
  font-size: 16px;
  text-align: left;
  border-bottom: 1px solid #ddd;
  width:33.33%;
}

.compare-section-main th {
  background-color: #f8f8f8;
  font-weight: bold;
}

.compare-section-main tr:hover {
  background-color: #f5f5f5;
}

.compare-section-main td:first-child,
.compare-section-main th:first-child {
  background-color: #fff;
  color: #000;
  font-weight: bold;
}

.compare-section-main td:last-child,
.compare-section-main th:last-child {
  background-color: #fff;
  color: #000;
  font-weight: bold;
  text-align: center;
}

.compare-section-main td.middle-cell {
  background-color: #000;
  color: #fff;
  font-weight: bold;
  border-bottom: 1px solid #fff !important;
  text-align: center;
}
.compare-section-main th:first-child{
  background-color: transparent ;
}
.compare-section-main th:last-child{
  border-top-right-radius: 10px;
  border-top-left-radius: 10px;
  text-align: center;
}
.compare-section-main th.middle-cell {
  background-color: #000;
  color: #fff;
  font-weight: bold;
  border-top-right-radius: 10px;
  border-top-left-radius: 10px;
  text-align: center;
}


.compare-section-main td.middle-cell .strike {
  text-decoration: line-through;
  font-size: 14px;
  color: #ccc;
  margin-left: 8px;
}

.compare-section-main .highlight-row td.middle-cell {
  background-color: #548234;
  color: #fff;
}

.compare-section-main .button {
  background: #548234;
  padding: 12px 30px;
  color: white;
  font-weight: bold;
  border-radius: 25px;
  display: inline-block;
  text-decoration: none;
  margin-top: 20px;
}
.compare-section-main table tbody tr:last-child td.middle-cell {
    position: relative;
    background-color:#548234;
}

.compare-section-main table tbody tr:last-child td.middle-cell:after {
    content: "";
    width: 100%;
    top: 100%;
    position: absolute;
    left: 0;
    height: 35px;
    background: #000000;
    border-top: 1px solid #fff;
    border-bottom-right-radius: 10px;
    border-bottom-left-radius: 10px;
}
.review-stars {
  margin-top: 40px; 
  max-width: 700px;
  margin-left:auto;
  margin-right:auto; 
  font-size: 16px; 
}
.review-stars .star-count {
  color: #f5c518;
  margin-bottom: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.review-stars .star-count svg.size-6 {
    width: 24px;
    height: 24px;
}
.review-stars .review-content{
  font-size:18px;  
  font-family: 'Inter';
}
.review-stars .reviewer-name{
 font-weight: bold; 
 margin-top: 10px;
 font-family: 'Inter';
 margin-bottom: 0px;
}
.review-stars .verified{
 color: green; 
 font-size: 14px; 
 font-family: 'Inter';
 margin-top: 0px;
}
</style>

<div class="compare-section-main">
  <div class="page-width">
    <h2 class="compare-heading">{{ section.settings.title }}</h2>

    <div class="table-container-section">
      <table class="table-wrpaer">
        <thead>
          <tr>
            <th>Inspired by</th>
            <th class="middle-cell"><img src="https://cdn.shopify.com/s/files/1/0665/7130/5147/files/Vanillalux_logo.svg?v=1751738356" alt="logo" width="250" height="40" style="filter: invert(1);width: 100%;"></th>
            <th>Other brands</th>
          </tr>
        </thead>
        <tbody>
          {% for block in section.blocks %}
            {% if block.type == 'comparison_row' %}
              <tr class="{% if block.settings.highlight %}highlight-row{% endif %}">
                <td>{{ block.settings.inspired_by }}</td>
                <td class="middle-cell">
              {% if block.settings.our_price != blank %}
                  {{ block.settings.our_price }}
                {% else %}
                {{ product.price | money_with_currency }}
                {% endif %}
                  {% if block.settings.strike_price != blank %}
                    <span class="strike">{{ block.settings.strike_price }}</span>
                  {% endif %}
                </td>
                <td>{{ block.settings.their_price }}</td>
              </tr>
            {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>

    {% if section.settings.button_label and section.settings.button_link %}
    <a href="{{ section.settings.button_link }}" class="button">
      {{ section.settings.button_label }}
    </a>
    {% endif %}

    <div class="review-stars">
      <div class="star-count"="color: #f5c518; font-weight:900, font-size: 23px; margin-bottom: 10px;">
      {% for i in (i..4) %}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
          <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd"></path>
        </svg>
      {% endfor %}
      </div>
      <p class="review-content">“{{ section.settings.review }}”</p>
      <p class="reviewer-name">{{ section.settings.reviewer }}</p>
      <p class="verified">✔ Verified Purchase</p>
    </div>
  </div>
</div>



{% schema %}
{
  "name": "How We Compare",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "How We Compare"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "CHOOSE OPTIONS"
    },
    {
      "type": "text",
      "id": "review",
      "label": "Customer Review",
      "default": "All my fragrances are amazing! The scent lasts so long, and they all smell just like the designer ones. I receive so many compliments on them - very satisfied!"
    },
    {
      "type": "text",
      "id": "reviewer",
      "label": "Reviewer Name",
      "default": "Diamond J."
    }
  ],
  "blocks": [
    {
      "type": "comparison_row",
      "name": "Comparison Row",
      "settings": [
        {
          "type": "text",
          "id": "inspired_by",
          "label": "Inspired By",
          "default": "Aventus"
        },
        {
          "type": "text",
          "id": "our_price",
          "label": "Our Price",
          "default": "$24.99",
          "info": "if this field will be blank then it will show the product Price"
        },
        {
          "type": "text",
          "id": "their_price",
          "label": "Other Brand Price",
          "default": "$295.00"
        },
        {
          "type": "checkbox",
          "id": "highlight",
          "label": "Highlight Row",
          "default": false
        },
        {
          "type": "text",
          "id": "strike_price",
          "label": "Strike Price (optional)"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "How We Compare",
      "category": "Custom"
    }
  ]
}
{% endschema %}